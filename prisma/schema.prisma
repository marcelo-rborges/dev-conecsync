generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model view_mercadeiro_produtos {
  id        Int      @id @default(autoincrement())
  atacado_status Boolean  @default(false)
  atacado_qtde  Decimal @db.Decimal(10,2) @default(0)
  atacado_valor  Decimal @db.Decimal(10,2) @default(0)
  ativo Boolean  @default(true)
  barcode     String   @db.VarChar(255) @default('')
  departamento_ativo Boolean  @default(false)
  departamento_id Int @default(null)
  departamento_nome     String   @db.VarChar(255) @default('')  estoque_minimo Decimal @db.Decimal(10,2) @default(0)
  estoque_atual Decimal @db.Decimal(10,2) @default(0)
  limite_venda_max Decimal @db.Decimal(10,2) @default(0)
  limite_venda_min Decimal @db.Decimal(10,2) @default(0)
  loja_id Int @default(0)
  ncm     String   @db.VarChar(255) @default('')
  nome     String   @db.VarChar(255) @default('')
  preco Decimal @db.Decimal(10,2) @default(0)
  subdepartamento_ativo Boolean  @default(false)
  subdepartamento_id Int @default(null)
  subdepartamento_nome     String   @db.VarChar(255) @default('')
  tipo_unidade_fracao     String   @db.VarChar(255) @default('')
}
